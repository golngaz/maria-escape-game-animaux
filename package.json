{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html --public-url ./"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "mitt": "^3.0.1"
  }
}
